{
  "name": "guara-cli",
  "version": "0.1.5",
  "description": "Add hooks to your project.",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": {
    "name": "shadcn",
    "url": "https://twitter.com/shadcn"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shadcn/ui.git",
    "directory": "packages/shadcn"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "guarahooks",
    "hooks",
    "custom hooks",
    "react hooks"
  ],
  "type": "module",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "prerelease": "git add . && (git diff --staged --quiet || git commit -m \"chore: prepare for release\")",
    "release:patch": "pnpm prerelease && pnpm build && pnpm version patch && pnpm publish",
    "release:minor": "pnpm prerelease && pnpm build && pnpm version minor && pnpm publish",
    "release:major": "pnpm prerelease && pnpm build && pnpm version major && pnpm publish"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "cross-env": "^7.0.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@inquirer/checkbox": "^4.1.8",
    "@inquirer/prompts": "^7.5.3",
    "commander": "^14.0.0",
    "kleur": "^4.1.5",
    "node-fetch": "^3.3.2",
    "zod": "^3.25.28"
  }
}
